{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Current File",
      "type": "node",
      "request": "launch",
      "sourceMaps": true,
      "smartStep": true,
      "runtimeExecutable": "npx",
      "runtimeArgs": ["ts-node", "-r", "tsconfig-paths/register"],
      "args": ["${file}"],
      "cwd": "${workspaceRoot}"
    }
  ]
}
