{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/sequelize.config.js"],
  "exclude": ["node_modules"],
  "baseUrl": "./src",
  "paths": {
    "@/*": ["*"]
  }
}
